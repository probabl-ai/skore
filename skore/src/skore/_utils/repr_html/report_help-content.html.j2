<div class="skore-help-container">
    <div class="skore-help-title">{{ title }}</div>
    <div class="skore-help-tree">
        {% if is_report %}
            {# Root node #}
            <div class="skore-help-node">
                <span class="skore-help-label">{{ root_node }}</span>
            </div>
            <div class="skore-help-root-content">
            {# Accessors #}
            {% for accessor in accessors %}
                <div class="skore-help-node skore-help-folder">
                    <input type="checkbox" id="{{ accessor.id }}" class="skore-help-toggle">
                    <label for="{{ accessor.id }}" class="skore-help-folder-label">
                        <span class="skore-help-name">.{{ accessor.name }}</span>
                    </label>
                    <div class="skore-help-folder-content" id="{{ accessor.branch_id }}">
                        {# Main accessor methods #}
                        {% for method in accessor.methods %}
                            <div class="skore-help-node skore-help-method">
                                <span class="skore-help-method-name">.<a href="{{ method.doc_url }}" target="_blank" class="skore-help-method-tooltip">{{ method.name }}<span class="skore-help-tooltip-text">{{ method.description|e }}{% if method.favorability %} {{ method.favorability|safe }}{% endif %}<br><br>Click to access the online documentation</span></a>{{ method.parameters }}</span>
                                </div>
                        {% endfor %}

                        {# Sub-accessors #}
                        {% for sub_accessor in accessor.sub_accessors or [] %}
                            <div class="skore-help-node skore-help-folder">
                                <input type="checkbox" id="{{ sub_accessor.id }}" class="skore-help-toggle">
                                <label for="{{ sub_accessor.id }}" class="skore-help-folder-label">
                                    <span class="skore-help-name">.{{ sub_accessor.name }}</span>
                                </label>
                                <div class="skore-help-folder-content" id="{{ sub_accessor.branch_id }}">
                                    {% for method in sub_accessor.methods %}
                                        <div class="skore-help-node skore-help-method">
                                            <span class="skore-help-method-name">.<a href="{{ method.doc_url }}" target="_blank" class="skore-help-method-tooltip">{{ method.name }}<span class="skore-help-tooltip-text">{{ method.description|e }}{% if method.favorability %} {{ method.favorability|safe }}{% endif %}<br><br>Click to access the online documentation</span></a>{{ method.parameters }}</span>
                                            </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

            {# Methods section #}
            {% if base_methods %}
                <div class="skore-help-node skore-help-folder">
                    <input type="checkbox" id="{{ methods_section.id }}" class="skore-help-toggle">
                    <label for="{{ methods_section.id }}" class="skore-help-folder-label">
                        <span class="skore-help-section-name">Methods</span>
                    </label>
                    <div class="skore-help-folder-content" id="{{ methods_section.branch_id }}">
                        {% for method in base_methods %}
                            <div class="skore-help-node skore-help-method">
                                <span class="skore-help-method-name">.<a href="{{ method.doc_url }}" target="_blank" class="skore-help-method-tooltip">{{ method.name }}<span class="skore-help-tooltip-text">{{ method.description|e }}{% if method.favorability %} {{ method.favorability|safe }}{% endif %}<br><br>Click to access the online documentation</span></a>{{ method.parameters }}</span>
                                </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Attributes section #}
            {% if attributes %}
                <div class="skore-help-node skore-help-folder">
                    <input type="checkbox" id="{{ attributes_section.id }}" class="skore-help-toggle">
                    <label for="{{ attributes_section.id }}" class="skore-help-folder-label">
                        <span class="skore-help-section-name">Attributes</span>
                    </label>
                    <div class="skore-help-folder-content" id="{{ attributes_section.branch_id }}">
                        {% for attr in attributes %}
                            <div class="skore-help-node skore-help-method">
                                <span class="skore-help-method-name">.<a href="{{ attr.doc_url }}" target="_blank" class="skore-help-method-tooltip">{{ attr.name }}<span class="skore-help-tooltip-text">{{ attr.description|e }}<br><br>Click to access the online documentation</span></a></span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            </div>
        {% else %}
            {# Accessor-only implementation #}
            <div class="skore-help-node">
                <span class="skore-help-label">{{ root_node }}</span>
            </div>
            <div class="skore-help-root-content">
                {% for method in methods %}
                    <div class="skore-help-node skore-help-method">
                        <span class="skore-help-method-name">.<a href="{{ method.doc_url }}" target="_blank" class="skore-help-method-tooltip">{{ method.name }}<span class="skore-help-tooltip-text">{{ method.description|e }}{% if method.favorability %} {{ method.favorability|safe }}{% endif %}<br><br>Click to access the online documentation</span></a>{{ method.parameters }}</span>
                        </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
